{% extends 'layout/frame.html.twig' %}

{% block framed %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Conversions receptionnées</h1>
    {% for message in app.user.receivedMessages %}
    <ul>
        <li>
            {{ message.sender.lastname }}
        </li>
    </ul>
    {% endfor %}

    <h1>Conversions demandées</h1>
    {% for message in app.user.sentMessages %}
        <ul>
            <li>
                {{ message.receiver.lastname }}
            </li>
        </ul>
    {% endfor %}
</div>
    <h3>Conversation</h3>
    <div>
        {% for message in app.user.receivedMessages %}
            {% if message.sender.lastname == 'contreatack' and message.receiver.lastname == 'alaplage'%}
            {{ message.content }}
            {% endif %}
        {% endfor %}
        {% for message in app.user.sentMessages %}
            {% if message.sender.lastname == 'alaplage' and message.receiver.lastname == 'contreatack'%}
                {{ message.content }}
            {% endif %}
        {% endfor %}
    </div>
{{ dump(app.user) }}
{{ dump(app.user.receivedMessages[0]) }}
{% endblock %}

