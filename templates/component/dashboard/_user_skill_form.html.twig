<div class="skillset">
    <h4 class="mb-2">Pick your skills</h4>
    {{ form_start(user_known_skill_form) }}
    {{ form_widget(user_known_skill_form._token) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(user_known_skill_form) }}
    </div>
    <div class="row justify-content-center m-2">
        {% for element in user_known_skill_form.skills.vars.choices %}
            <div class="col-12 col-md-3 card text-blueish bg-transparent p-3 m-1 ">
                <div class="card-header bg-transparent"><h3>{{ element.label }}</h3></div>
                <div class="card-body bg-light text-dark">
                    {% for choice in element.choices %}
                        <div class="skillset-card mb-3">
                            <label class="mb-1 text-wrap" title="{{ choice.label }}"
                                   for="user_known_skill_skills_{{ choice.value }}">{{ choice.label }}</label>

                            <input {{ choice.value in user_known_skill_form.skills.vars.value ? 'checked' : '' }}
                                    type="checkbox" id="user_known_skill_skills_{{ choice.value }}"
                                    name="user_known_skill[skills][]" value="{{ choice.value }}">
                            <span class="check"></span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        <div class="col-12 col-md-10 p-3 m-1">
        <a class="d-flex justify-content-end" href="{{ path('dashboard_new_skills') }}">// Add new skill</a>
        </div>
    </div>
    <div class="row justify-content-center mt-2">
        <div class="form-button mt-2">
            <input type="hidden" name="token" value="{{ csrf_token('add_skills') }}"/>
            <button type="submit" class="btn btn-warning">Update</button>
        </div>
    </div>
    {{ form_end(user_known_skill_form, {'render_rest': false}) }}
</div>







