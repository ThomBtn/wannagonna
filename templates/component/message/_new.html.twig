{% extends 'layout/frame.html.twig' %}
{% block framed %}
    <div class="d-flex flex-column bg-light rounded w-100 mt-3">
        <div class="row">
            <a href="{{ path('dashboard_index') }}#messages">Back to inbox</a>
        </div>
        <h2>Send a message</h2>
        <div class="container mt-2 mb-2 pt-2 pb-2 shadow border border-blueish 1px justify-content-center">
            {% form_theme form 'bootstrap_4_layout.html.twig' %}
            {{ form_start(form, {'attr': {'class': 'row'}}) }}
            <div class="col-lg-6 col-12 form-group">
                {{ form_row(form.receiver, {'attr': {'class': 'overflow-auto form-control checkbox-overflow pl-5'}}) }}
            </div>
            <div class="col-lg-6 col-12 form-group">
                {{ form_row(form.content, {'attr': {'class': 'overflow-auto'}}) }}
                <button class="btn-blueish mt-2">Send</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
