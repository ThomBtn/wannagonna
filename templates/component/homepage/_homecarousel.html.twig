

<div class="container-fluid m-0 p-0">
    <div id="home-carousel" class="carousel slide"  data-ride="carousel" data-interval="5000" data-pause=false>
        <ol class="carousel-indicators">
            {% for slide in slides %}
                <li data-target="#home-carousel" data-slide-to="{{ slide.numero -1 }}" {{ loop.index0 == 0 ? 'class="active"' :''}}></li>
            {% endfor %}
        </ol>

        <div class="carousel-inner">
            {%  for slide in slides %}
                <div class="carousel-item {{ loop.index0 == 0 ? 'active' :''}}">
                    <img class="d-block w-100 img-fluid" src="{{ slide.image }}" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>{{ slide.title }}</h5>
                        <p>{{ slide.caption }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        <a class="carousel-control-prev" href="#home-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#home-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
</div>



