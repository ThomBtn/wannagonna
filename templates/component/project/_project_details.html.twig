<div class="project-card d-flex flex-column align-content-start justify-content-start my-5" >
    <div>
        <h3>Description</h3>
        <p class="my-4">{{ project.description|raw }}</p>
        <div class="container p-0">
            <div class="row justify-content-center m-0">
                {% if project.cover == 'DEFAULT_COVER.png' %}
                    <img class="col-12 col-sm-7 col-md-5" src="{{ asset('build/images/sdg_icons/DEFAULT_COVER.png') }}" alt="Project Cover">
                {% else %}
                    <img class="col-12 col-sm-7 col-md-5" src="{{ asset('uploads/images/projectcover/') }}{{ project.cover }}" alt="Project Image">
                {%  endif %}
            </div>
        </div>
