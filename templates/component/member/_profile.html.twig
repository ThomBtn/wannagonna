<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            {% if user.avatar.name == 'DEFAULTAVATAR_sdg-wheel.png' %}
                <img class="card-img-top m-0 img-fluid" src="{{ asset('build/images/sdg_icons/sdg-wheel.png') }}" alt="Picture {{ user.firstname }}">
            {% else %}
                <img class="card-img-top m-0 img-fluid" src="{{ asset('uploads/images/avatar/') }}{{ user.avatar.name }}" alt="Picture {{ user.firstname }}">
            {% endif %}
        </div>
        <div class="col-md-6 ml-auto">
            <p class="font-weight-bold">About me</p>
            {%  if user.biography %}
                {{ user.biography }}
            {%  else %}
                No biography provided
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="row mt-4">
                {% if user.organization is null %}
                    <div class="col-6 col-sm-6">
                        <p class="font-weight-bold">I speak...</p>
                        {%  if user.languages %}
                            {% for language in user.languages %}
                                <span class="badge badge-blueish">{{ language.name }}</span>
                            {% endfor %}
                        {%  else %}
                            No language provided
                        {% endif %}
                    </div>
                    <div class="col-6 col-sm-6">
                        <p class="font-weight-bold">I can...</p>
                        {%  if user.skills %}
                            {% for skill in user.skills %}
                                <span class="badge badge-blueish">{{ skill.name }}</span>
                            {% endfor %}
                        {%  else %}
                            No skills provided
                        {% endif %}
                    </div>
                {% else %}
                    <div class="col-12 col-sm-12">
                        <p class="font-weight-bold">Address</p>
                        <p>{{ user.organization.address }}</p>
                    </div>
                {%  endif %}
            </div>
        </div>
    </div>
</div>
